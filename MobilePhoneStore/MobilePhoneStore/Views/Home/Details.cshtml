@model PhoneDetailsModel

@{
    ViewData["Title"] = "Details";
}
<a asp-action="Index">Back to Home</a>
<h1>@Model.Name</h1>
<div class="row ">
    <div class="col-lg">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <td>მწარმოებელი</td>
                    <td>@Model.Manufacturer</td>
                </tr>
                <tr>
                    <td>მოდელი</td>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <td>ფასი</td>
                    <td>@Model.Price.ToString() <span>$</span></td>
                </tr>
                <tr>
                    <td>მეხსიერება</td>
                    <td>@Model.Memory</td>
                </tr>
                <tr>
                    <td>პროცესორი</td>
                    <td>@Model.CPU</td>
                </tr>
                <tr>
                    <td>ოპერაციული სისტემა</td>
                    <td>@Model.OS</td>
                </tr>
                <tr>
                    <td>გარჩევადობა</td>
                    <td>@Model.Dimension</td>
                </tr>
                <tr>
                    <td>ეკრანის ზომა</td>
                    <td>@Model.Display</td>
                </tr>
                <tr>
                    <td>წონა</td>
                    <td>@Model.Weight <span>გ</span></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="row justify-content-md-center">
    <div class="col-xs-12 ">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="pictures-tab" data-toggle="tab" href="#pictures" role="tab" aria-controls="profile" aria-selected="true">სურათები</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="videos-tab" data-toggle="tab" href="#videos" role="tab" aria-controls="contact" aria-selected="false">ვიდეო</a>
            </li>
        </ul>
    </div>
    <div class="tab-content" id="mobileInfoDetails">
        <div class="tab-pane fade show active" id="pictures" role="tabpanel" aria-labelledby="pictures-tab">
            <br />
            @if (Model.Images.Count() > 1)
            {
                <div class="col-9 align-self-center m-auto pt-4" style="width: 55vw; height: 80vh;">
                    <div id="carouselDetails" class="carousel slide w-100 h-100" data-ride="carousel">
                        <ol class="carousel-indicators">
                            @for (int i = 0; i < Model.Images.Count(); i++)
                            {
                                <li data-target="#carouselDetails" data-slide-to="@i" @(i == 0 ? "class=active" : "")></li>
                            }
                        </ol>
                        <div class="carousel-inner w-100 h-100">
                            @for (int i = 0; i < Model.Images.Count(); i++)
                            {
                                <div class="carousel-item text-center @(i == 0 ? "active" : "")" data-interval="">
                                    <a href="~/images/@Model.Images[i]" target="_blank">
                                        <img src="~/images/@Model.Images[i]" class="d-inline-block" style="max-width: 55vw; max-height: 80vh;" alt="...">
                                    </a>
                                </div>
                            }
                        </div>
                        <a class="carousel-control-prev" href="#carouselDetails" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true" style="background-color:cornflowerblue"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselDetails" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true" style="background-color:cornflowerblue"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            }
        </div>
        <div class="tab-pane fade" id="videos" role="tabpanel" aria-labelledby="videos-tab">
            <br /><br />
            <div class="col-xs-12">
                <iframe width="800" height="360" src=@Model.Video frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</div>


